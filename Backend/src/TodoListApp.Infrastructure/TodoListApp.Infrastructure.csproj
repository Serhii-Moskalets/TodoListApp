    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<NoWarn>SA1633,SA1200,SA1502,SA1309,SA1009,IDE0290,IDE0130,RCS1155,CA1862,IDE0301</NoWarn>
